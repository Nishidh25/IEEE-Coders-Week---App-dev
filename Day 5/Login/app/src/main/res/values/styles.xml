<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1f1f1f</item>
        <item name="colorPrimaryDark">#1f1f1f</item>
        <item name="colorAccent">#1f1f1f</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">#1f1f1f</item>
        <item name="colorPrimary">#1f1f1f</item>
        <item name="colorPrimaryDark">#1f1f1f</item>
    </style>


    <style name="Firebase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#1f1f1f</item>
        <item name="colorPrimary">#1f1f1f</item>
        <item name="colorPrimaryDark">#1f1f1f</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorTertiary">#FFFFFF</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>
        <item name="android:textColorSecondaryInverse">#FFFFFF</item>
        <item name="android:textColorTertiaryInverse">#FFFFFF</item>
        <item name="android:windowBackground">#1f1f1f</item>
    </style>
</resources>